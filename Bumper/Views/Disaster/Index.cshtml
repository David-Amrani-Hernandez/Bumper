@model IEnumerable<Bumper.incidence>

@{
    ViewBag.Title = "Disaster";
}

<center><h1>Disaster</h1></center><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row container-slim">
        <div class="col-lg-9">
            <div class="form-group">
                <select class="form-control" name="instance">
                    @foreach (var item in ViewBag.Machines)
                    {
                        <option value="@item.instance">@item.tag (@item.environment)</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-lg-3">
            <button type="submit" role="button" class="btn btn-danger btn-block"><i class="fa fa-search"></i>&nbsp; Execute</button>
        </div>
    </div>

    <div class="row container-slim" id="plugin_box">
        <div class="col-lg-12"><b>Instance</b></div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="quarantine"><i class="fa fa-medkit" aria-hidden="true"></i> Quarantine</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="snapshot"><i class="fa fa-camera" aria-hidden="true"></i> Create snapshot</label>
        </div>

        <div class="col-lg-12"><b>Information</b></div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="dumpRam">RAM Dump</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="logExtract">Extract Logs</label>
        </div>

        <div class="col-lg-12"><b>Access</b></div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="revokeKeys">Revoke keys</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="revokePolicy">Revoke owner policy</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="revokeSession">Revoke sessions</label>
        </div>

    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
