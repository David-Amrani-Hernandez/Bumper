@model Bumper.Models.FormAnalysis

@{
    ViewBag.Title = "Analysis";
}

<center><h1>Analyzer</h1></center><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row container-slim">
        <div class="col-lg-9">
            <div class="form-group">
                
                <select class="form-control" name="instance">
                    @foreach (var item in ViewBag.Machines)
                    {
                        <option value="@item.instance">@item.tag (@item.environment)</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-lg-3">
            <button type="submit" role="button" class="btn btn-warning btn-block"><i class="fa fa-search"></i>&nbsp; Analyze</button>
        </div>
    </div>

    <div class="row container-slim" id="plugin_box">
        <div class="col-lg-12"><b>AWS Services</b></div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="secgroup"><i class="fa fa-users" aria-hidden="true"></i> Server Groups </label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin btn-block"><input type="checkbox" autocomplete="off" name="cloudwatch"><i class="fa fa-eye" aria-hidden="true"></i> CloudWatch</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin btn-block"><input type="checkbox" autocomplete="off" name="instancelog"><i class="fa fa-file-text-o" aria-hidden="true"></i> Instance Logs</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="snapshot"><i class="fa fa-camera" aria-hidden="true"></i> Snapshots</label>
        </div>

        <div class="col-lg-12"><b>AWS Services</b></div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="header"><i class="fa fa-cogs" aria-hidden="true"></i> Headers</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin active btn-block"><input type="checkbox" checked autocomplete="off" name="servicestatus"><i class="fa fa-bars" aria-hidden="true"></i> Server Status</label>
        </div>

        <div class="col-lg-12"><b>AWS Services</b></div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin btn-block"><input type="checkbox" autocomplete="off" name="connections"><i class="fa fa-question" aria-hidden="true"></i> Unusual connections</label>
        </div>

        <div class="col-lg-3" data-toggle="buttons">
            <label class="btn btn-plugin btn-block"><input type="checkbox" autocomplete="off" name="publishedkeys"><i class="fa fa-key" aria-hidden="true"></i> Private Keys</label>
        </div>

    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
