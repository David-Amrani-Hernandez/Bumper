@model Bumper.incidence

@{
    ViewBag.Title = "Delete";
}

<h2>Delete ? &nbsp; <small>Are you sure you want to delete this incidence?</small></h2>
<h3></h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Vulnerability
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vulnerability) (Machines: <i>@Model.machine.tag</i>)
        </dd>

        <dt>
            Evidence
        </dt>

        <dd>
            @Html.DisplayFor(model => model.evidence)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            Provider
        </dt>

        <dd>
            @Html.DisplayFor(model => model.machine.provider)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("Index")" role="button" class="btn btn-default">Back to list</a>
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"> &nbsp;</i>Delete</button>
        </div>
    }
</div>
